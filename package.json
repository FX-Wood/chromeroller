  "repository": {
    "type": "git",
    "url": "git+https://github.com/FX-Wood/dicemagic.beyond.git"
  },
  "author": "FX Wood",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/FX-Wood/dicemagic.beyond/issues"
  },
  "homepage": "https://github.com/FX-Wood/dicemagic.beyond#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "jsdom": "^15.1.1",
    "mocha": "^6.1.4",
    "sinon": "^7.3.2",
    "web-ext": "^3.0.0",
    "jsdom-global": "^3.0.2"
  }
}
