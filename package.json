{
  "name": "dicemagic.beyond",
  "version": "1.1.5",
  "description": "dice rolling web extension for d&d beyond",
  "main": "manifest.json",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint & mocha --file ./test/setup.js",
    "lint": "eslint js/*.js test/*.js"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    }
